.col-md-9.col-md-offset-3.main(data-ng-controller='GameCtrl as gameCtrl')
  .controls.row
    .col-md-12
      button.btn.btn-success(type='button',
        data-ng-click='gameCtrl.start(gameCtrl.cardViewModels, gameCtrl.numOfCards)',
        data-ng-hide='gameCtrl.timer') Start Game
      button.btn.btn-danger(type='button',
        data-ng-click='gameCtrl.stop()',
        data-ng-show='gameCtrl.timer') Stop Game
      span(
        data-ng-if='gameCtrl.timer',
        em-countdown='gameCtrl.timer',
        em-countdown-duration='gameCtrl.duration(gameCtrl.cards.length, gameCtrl.curDifficulty)')

      span(data-ng-bind-template='number of cards {{gameCtrl.numOfCards}}')
      span.glyphicon.gylphicon-arrow-up
      span.glyphicon.gylphicon-arrow-down

  .cards.row(data-ng-controller='CardsCtrl as cardsCtrl')
    .col-md-12
      //-img.container-img(src='img/1.jpg')
      .cards-container
        .row(data-ng-include='"card.html"')
