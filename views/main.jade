.col-sm-9.col-sm-offset-3.col-md-9.col-md-offset-3.main(data-ng-controller='GameCtrl as gameCtrl')
  .controls.row
    button(data-ng-click='gameCtrl.start()') Start Game
    span(em-countdown='gameCtrl.timer', em-countdown-duration='gameCtrl.duration(gameCtrl.cards.length)')

  .cards.row(data-ng-controller='CardsCtrl as cardsCtrl')

    .card.col-xs-6.col-md-2.fx-fade-down.fx-speed-500(
      data-ng-repeat='card in gameCtrl.cards track by card.cid'
    )
      .card-data-container(data-ng-switch='card.type')
        .card-img(data-ng-switch-when='img')
          img(data-ng-src='{{card.imgSrc}}')
        .card-info(data-ng-switch-default)
          span(data-ng-bind='card.fullName')
